@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EmployeesApp.Web.Controllers
@using EmployeesApp.Web.Models
@model Employee[]

@{
    Layout = "_Layout";
    ViewBag.Title = "Index";
}



<div style="margin: 50px;">
    <h2>Employees</h2>
    <ul>
        @foreach (Employee employee in Model)
        {
            <li>
                <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a>
            </li>
        }
    </ul>
    <h3><a asp-controller="Employees" asp-action="@nameof(EmployeesController.Create)">Create Employee</a></h3>
</div>
